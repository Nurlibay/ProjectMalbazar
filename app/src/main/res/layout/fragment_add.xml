<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Daǵaza beriw"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/menu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:hint="Bólimler"
        android:onClick="showPopup"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:layout_editor_absoluteX="16dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/etShortInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#C0C0C5"
        android:hint="Qısqasha malıwmat jazıń"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu" />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#C0C0C5"
        android:gravity="top"
        android:hint="Toliǵraq malıwmat jazıń ..."
        android:inputType="textLongMessage"
        android:minHeight="160dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etShortInfo" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#C0C0C5"
        android:gravity="center_vertical"
        android:hint="Bahası"
        android:inputType="number"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etInfo" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#C0C0C5"
        android:gravity="center_vertical"
        android:hint="Telefon nomerıńız"
        android:inputType="number"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etPrice" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/menuCity"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Aymaqtı saylaw"
        app:layout_constraintTop_toBottomOf="@id/etPhone">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="16dp"
        android:background="#004DDA"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:text="Daǵazanı járialaw"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>