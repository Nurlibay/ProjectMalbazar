<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.add.AddFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Daǵaza beriw"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/line"
        android:drawableEnd="@drawable/right"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="Bólimler"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etShortInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line"
        android:hint="Qısqasha malıwmat jazıń"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu" />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line"
        android:gravity="top"
        android:hint="Toliǵraq malıwmat jazıń ..."
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etShortInfo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/etInfo">

        <TextView
            android:id="@+id/tvImageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Suwretler"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivFirst"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/line"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvImageTitle" />

        <ImageView
            android:id="@+id/ivSecond"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/line"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFirst"
            app:layout_constraintTop_toBottomOf="@id/tvImageTitle" />

        <ImageView
            android:id="@+id/ivThird"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/line"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSecond"
            app:layout_constraintTop_toBottomOf="@id/tvImageTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line"
        android:gravity="center_vertical"
        android:hint="Bahası"
        android:inputType="number"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/constraint" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line"
        android:gravity="center_vertical"
        android:hint="Telefon nomerıńız"
        android:inputType="number"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/etPrice" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/line"
        android:drawableEnd="@drawable/right"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:text="Aymaqtı saylaw"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/etPhone" />

    <TextView
        android:id="@+id/btnSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="16dp"
        android:background="#004DDA"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:text="Daǵazanı járialaw"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>