<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.main.info.comments.CommentsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/comments" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/llLetters"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        tools:listitem="@layout/comment_item" />

        <LinearLayout
            android:id="@+id/llLetters"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/clComment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvGg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ғ"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvK"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ӄ"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ў"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvX"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ҳ"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvI"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ı"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvN"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ń"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvU"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ú"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvA"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="á"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvG"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ǵ"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvO"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ó"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/message"
            android:inputType="textShortMessage"
            android:paddingStart="@dimen/margin_standard"
            app:layout_constraintEnd_toStartOf="@id/ivSend"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/margin_middle"
            android:src="@drawable/send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>