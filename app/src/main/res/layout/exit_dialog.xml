<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:background="@color/background"
    android:minWidth="280dp"
    android:paddingHorizontal="@dimen/margin_standard_large"
    android:paddingVertical="@dimen/margin_standard">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/malbazar_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#142DA8"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_corner_radius="40dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:paddingVertical="@dimen/margin_middle"
        android:text="Шығыу"
        android:textColor="#DE000000"
        android:textSize="@dimen/margin_standard"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:padding="@dimen/margin_middle"
        android:text="Аккаунтан шыгыуды ӄалейсизба. Егер шыӄсаӊыз \n өз аккаунтыӊызди ӄаита тиклеи аласыз."
        android:textColor="#232F34"
        app:layout_constraintBottom_toTopOf="@id/tvExit"
        app:layout_constraintStart_toStartOf="@id/ivLogo"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        android:text="@string/logout"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_standard"
        android:padding="@dimen/margin_middle"
        android:text="@string/back"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvExit"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>